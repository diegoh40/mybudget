<%= render partial: 'shared/navbar', locals: { heading: 'REGISTER', back_path: unauthenticated_root_path } %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class='d-flex flex-column align-items-center'>
    <div class="field w-75 mt-3">
      <%= f.text_field :name, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Full Name' %>
    </div>
  
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email' %>
    </div>
  
    <div class="field w-75 mt-3">
      <%= f.password_field :password, autocomplete: "new-password", class: 'form-control', placeholder: 'Password (6 characters minimum)' %>
    </div>
  
    <div class="field w-75 mt-3">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control', placeholder: 'Password Confirmation' %>
    </div>
  
    <div class="actions">
      <%= f.submit "Next", class: 'sign_up_btn' %>
    </div>
  </div>
<% end %>
